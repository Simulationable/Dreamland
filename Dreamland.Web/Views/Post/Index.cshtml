@using Dreamland.Domain.Enums
<link rel="stylesheet" href="~/css/post.css" asp-append-version="true" />

<h4 class="title text-center mb-3"><bold>DL Family</bold></h4>

<img class="pc" src="/images/post/family/05 DL Family_Top Banner_PC.jpg" />
<img class="mobile" src="/images/post/family/05 DL Family_Top Banner_Mobile_20220117.jpg" />

<div class="section">
    <div class="row mt-3">
        <div class="col-12">
            <h4 class="title text-center"><bold>เสียงหัวเราะจากครอบครัวดรีมแลนด์</bold></h4>
        </div>
        <div class="col-12">
            <h5 class="text-center maincolor"><bold>เรื่องราวน่าเล่าของเรา</bold></h5>
        </div>
    </div>
    <hr />
    <div class="row">
        @foreach (var post in ViewBag.testimonailPost)
        {
            <div class="col-12 col-md-4 mt-3">
                <div class="row">
                    <a href="@Url.Action("Page", "Post" , new { id = post.Id })"><img src="@post.TitleImage" style="width: 100%"/></a>
                </div>
                <div class="row" style="inline-size: 403px;text-overflow: ellipsis;">
                    <a href="@Url.Action("Page", "Post" , new { id = post.Id })"><h5 class="maincolor mt-3" style="word-wrap: normal" onclick="location.href='@Url.Action("Page", "Post" , new { id = post.Id })'">@post.Name</h5></a>
                    <span>@Html.Raw(@post.Description)</span>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="dreamland-button" onclick="location.href='@Url.Action("PostList", "Post" , new { method="Family" })'">Read More</button>
        </div>
    </div>
</div>
<div class="section">
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="title text-center"><bold>กิจกรรมดีๆ ของเรา</bold></h4>
        </div>
    </div>
    <hr />
    <div class="row">
        @foreach (var post in ViewBag.activityPost)
        {
            <div class="col-12 col-md-4 mt-3">
                <div class="row">
                    <a href="@Url.Action("Page", "Post" , new { id = post.Id })"><img src="@post.TitleImage" style="width: 100%"/></a>
                </div>
                <div class="row" style="inline-size: 403px;text-overflow: ellipsis;">
                    <a class="maincolor" href="@Url.Action("Page", "Post" , new { id = post.Id })"><h5 class="mt-3" style="word-wrap: normal" onclick="location.href='@Url.Action("Page", "Post" , new { id = post.Id })'">@post.Name</h5></a>
                    <span>@Html.Raw(@post.Description)</span>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="dreamland-button" onclick="location.href='@Url.Action("PostList", "Post" , new { method="Activity" })'">Read More</button>
        </div>
    </div>
</div>





